<Window x:Class="Files_Transfer.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Files_Transfer"
        mc:Ignorable="d"
        Title="InfoWindow" Height="250" Width="500"
        WindowStartupLocation="CenterOwner" WindowStyle="None"
        MouseLeftButtonDown="Drag" Background="Transparent"
        ResizeMode="CanMinimize">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="-1"></WindowChrome>
    </WindowChrome.WindowChrome>
    <Window.Template>
        <ControlTemplate TargetType="Window">
            <Grid>
                <Border Background="{DynamicResource InfoWindowBackgroundBrush}" CornerRadius="10">
                    <ContentPresenter></ContentPresenter>
                </Border>
            </Grid>
        </ControlTemplate>
    </Window.Template>
    <Window.Style>
        <Style TargetType="Window">
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform X="0" Y="0"></TranslateTransform>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1" Duration="0:0:0.2"></DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                             From="30" To="0" Duration="0:0:0.5" DecelerationRatio="0.6">
                                <DoubleAnimation.EasingFunction>
                                    <BackEase Amplitude="1" EasingMode="EaseOut"></BackEase>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Window.Style>
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="FT" FontWeight="Black" FontSize="60" HorizontalContentAlignment="Center" 
                   Foreground="{DynamicResource TextBrush}" Width="100"></Label>
            <Label Grid.Column="1" Content="Version 1.0" FontSize="18" VerticalContentAlignment="Bottom" Margin="0 0 0 15"
                   Foreground="{DynamicResource ThirdTextBrush}"></Label>
            <Button Grid.Column="2" FontFamily="{StaticResource TaskIcon}" Content="&#xe62a;" FontSize="18" VerticalAlignment="Top"
                    Width="40" Height="40" Style="{StaticResource TaskBarButton}" Click="CloseButton" Margin="0 10 0 0"></Button>
        </Grid>
        <Grid Grid.Row="1">
            <TextBlock Width="300" HorizontalAlignment="Left" Foreground="{DynamicResource ThirdTextBrush}"
                       Text="C#&#x000A;&#x000A;WPF (Windows Presentation Foundation)&#x000A;&#x000A;.net8.0-windows" Margin="35 25 25 25"></TextBlock>
            <Image Source="Assets/PNG/icon.png" Width="90" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 -40 20 0"></Image>
        </Grid>
        <Grid Grid.Row="2">
            <Label Content="© 2025 Files Transfer" FontSize="12" Foreground="{DynamicResource InfoWindowTextBrush}"
                   Width="150" HorizontalAlignment="Left" Margin="10 0"></Label>
            <Label Content="Made by ender__candle" FontSize="12" Foreground="{DynamicResource InfoWindowTextBrush}"
                   Width="150" HorizontalAlignment="Right"></Label>
        </Grid>
    </Grid>
</Window>
