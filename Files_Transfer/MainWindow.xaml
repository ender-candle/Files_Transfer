<Window x:Class="Files_Transfer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Files_Transfer.UserControls"
        mc:Ignorable="d"
        Title="File Transfer" Height="700" Width="950" Name="Window"
        WindowStartupLocation="CenterScreen" Background="Transparent"
        Closing="MainWindow_OnClosing" StateChanged="MainWindow_OnStateChanged"
        MouseEnter="MainWindow_OnMouseEnter" MouseLeave="MainWindow_OnMouseLeave"
        Icon="Assets/PNG/icon.png">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0 30 0 0" ResizeBorderThickness="5" NonClientFrameEdges="Right"></WindowChrome>
    </WindowChrome.WindowChrome>
    <Grid>
        <Border Background="{DynamicResource BackgroundBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <!-- 侧边栏 -->
                <Grid Grid.Column="0" Background="{DynamicResource SidebarBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <!--侧边栏上半-->
                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" VerticalAlignment="Top">
                        <Label Content="FT" Foreground="{DynamicResource TextBrush}" FontSize="35"
                               HorizontalContentAlignment="Center" Margin="0 30 0 40" FontWeight="Bold"></Label>
                        <Button FontFamily="{StaticResource Icon}" Content="&#xe675;" FontSize="20"
                                Width="40" Height="40" Style="{StaticResource SideBarButton}"
                                Margin="0 0 0 20" RenderTransformOrigin="0.5 0.5" Click="NetworkPageSwitchButton">
                            <Button.RenderTransform>
                                <RotateTransform x:Name="Button1" Angle="0"></RotateTransform>
                            </Button.RenderTransform>
                            <Button.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="Button1"
                                                Storyboard.TargetProperty="(RotateTransform.Angle)"
                                                From="0" To="180" Duration="0:0:1">
                                                <DoubleAnimation.EasingFunction>
                                                    <BounceEase Bounces="3" Bounciness="3"></BounceEase>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Button.Triggers>
                        </Button>
                        <Button FontFamily="{StaticResource Icon}" Content="&#xe6a1;" FontSize="18"
                                Width="40" Height="40" Style="{StaticResource SideBarButton}"
                                Margin="0 0 0 20" RenderTransformOrigin="0.5 0.5" Click="TaskPageSwitchButton">
                            <Button.RenderTransform>
                                <RotateTransform x:Name="Button2" Angle="0"></RotateTransform>
                            </Button.RenderTransform>
                            <Button.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="Button2"
                                                Storyboard.TargetProperty="(RotateTransform.Angle)"
                                                From="0" To="180" Duration="0:0:1">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase Amplitude="0.9" EasingMode="EaseInOut"></BackEase>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Button.Triggers>
                        </Button>
                        <Button FontFamily="{StaticResource Icon}" Content="&#xe613;" FontSize="25"
                                Width="40" Height="40" Style="{StaticResource SideBarButton}"
                                Margin="0 0 0 20" RenderTransformOrigin="0.5 0.5" Click="SendPageSwitchButton">
                            <Button.RenderTransform>
                                <RotateTransform x:Name="Button3" Angle="0"></RotateTransform>
                            </Button.RenderTransform>
                            <Button.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="Button3"
                                                Storyboard.TargetProperty="(RotateTransform.Angle)"
                                                From="0" To="90" Duration="0:0:1">
                                                <DoubleAnimation.EasingFunction>
                                                    <ElasticEase Oscillations="3" Springiness="3" EasingMode="EaseOut"></ElasticEase>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Button.Triggers>
                        </Button>
                        
                    </StackPanel>
                    <!--侧边栏下半-->
                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" VerticalAlignment="Bottom">
                        <Button FontFamily="{StaticResource Icon}" Content="&#xe600;" FontSize="20"
                                Width="40" Height="40" Style="{StaticResource SideBarButton}"
                                Margin="0 20 0 0" RenderTransformOrigin="0.5 0.5" Click="SettingPageSwitchButton">
                            <Button.RenderTransform>
                                <RotateTransform x:Name="Button4" Angle="0"></RotateTransform>
                            </Button.RenderTransform>
                            <Button.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="Button4"
                                                Storyboard.TargetProperty="(RotateTransform.Angle)"
                                                From="0" To="45" Duration="0:0:0.5">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase Amplitude="1.5" EasingMode="EaseIn"></BackEase>
                                                </DoubleAnimation.EasingFunction>
                                                <DoubleAnimation.AutoReverse>True</DoubleAnimation.AutoReverse>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Button.Triggers>
                        </Button>
                        <Button FontFamily="{StaticResource Icon}" Content="&#xe8c8;" FontSize="20"
                                Width="40" Height="40" Style="{StaticResource SideBarButton}"
                                Margin="0 20 0 30" RenderTransformOrigin="0.5 0.5" Click="InfoWindowSwitchButton">
                            <Button.RenderTransform>
                                <RotateTransform x:Name="Button5" Angle="0"></RotateTransform>
                            </Button.RenderTransform>
                            <Button.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="Button5"
                                                Storyboard.TargetProperty="(RotateTransform.Angle)"
                                                From="0" To="360" Duration="0:0:1">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Button.Triggers>
                        </Button>
                    </StackPanel>
                </Grid>
                
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <!--顶栏-->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Label Background="{DynamicResource BackgroundBrush}"
                               Foreground="{DynamicResource WindowButtonForegroundBrush}"
                               FontFamily="{StaticResource Icon}" Content="&#xe630;"
                               VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                               Width="47" Height="30" FontSize="12" Margin="0 0 1 10" Name="Minimize"></Label>
                        <Label Background="{DynamicResource BackgroundBrush}"
                               Foreground="{DynamicResource WindowButtonForegroundBrush}"
                               FontFamily="{StaticResource Icon}" Content="&#xe621;"
                               VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                               Width="46" Height="30" FontSize="11" Margin="0 0 0.5 10" Name="Maximize"></Label>
                        <Label Background="{DynamicResource BackgroundBrush}"
                               Foreground="{DynamicResource WindowButtonForegroundBrush}"
                               FontFamily="{StaticResource Icon}" Content="&#xe6da;"
                               VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                               Width="46" Height="30" FontSize="14" Margin="0 0 0.5 10" Name="MinimizeWindow" Visibility="Collapsed"></Label>
                        <Label Background="{DynamicResource BackgroundBrush}"
                               Foreground="{DynamicResource WindowButtonForegroundBrush}"
                               FontFamily="{StaticResource Icon}" Content="&#xe612;"
                               VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                               Width="47" Height="30" FontSize="15" Margin="0 0 3 10" Name="CloseWindow"></Label>
                    </StackPanel>
                    <Border Grid.Row="0" Width="155" Height="10" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                            Background="#0000FF00" Name="CheckBorder"
                            MouseEnter="CheckBorder_OnMouseEnter" MouseLeave="CheckBorder_OnMouseLeave"></Border>
                    <!--内容区-->
                    <Frame Grid.Row="1" Name="Frame" NavigationUIVisibility="Hidden"></Frame>
                </Grid>
                <Canvas Grid.Column="1" Name="DragCanvas">
                    <local:SpeedIndicator Width="40" Height="40" x:Name="Indicator" Margin=" 790 570 0 0"
                                          PreviewMouseLeftButtonDown="DragMouseDown" PreviewMouseMove="DragMouseMove" PreviewMouseLeftButtonUp="DragMouseUp"></local:SpeedIndicator>
                </Canvas>
            </Grid>
        </Border>
    </Grid>
</Window>
