<Page x:Class="Files_Transfer.Pages.NetworkPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Files_Transfer.Pages"
      mc:Ignorable="d"
      Title="NetworkPage" Style="{StaticResource NetworkPage}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="网络连接" FontSize="25" FontWeight="Black" Foreground="{DynamicResource SecondTextBrush}"
                       VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Left"
                       Margin="40 0 0 0"></Label>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <RadioButton Name="ServerPageRadioButton" Margin="0 0 -3 0"
                                 Style="{StaticResource NetworkRadioButtonLeft}" Checked="ServerPageRadioButton_OnChecked"></RadioButton>
                    <RadioButton Name="ClientPageRadioButton" Margin="0 0 40 0"
                                 Style="{StaticResource NetworkRadioButtonRight}" Checked="ClientPageRadioButton_OnChecked"></RadioButton>
                </StackPanel>
            </Grid>
            <Border Grid.Row="1" Height="2" Background="{DynamicResource LineColorBrush}" Margin="40 0"></Border>
        </Grid>
        <Frame Grid.Row="1" Name="Frame" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Page>
