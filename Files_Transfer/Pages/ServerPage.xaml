<Page x:Class="Files_Transfer.Pages.ServerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Files_Transfer.Pages"
      mc:Ignorable="d"
      Title="ServerPage" Style="{StaticResource ServerPage}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.8*"></ColumnDefinition>
                <ColumnDefinition Width="0.2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="0">
                <Label Content="IP" Foreground="{DynamicResource SecondTextBrush}" HorizontalContentAlignment="Center"
                       FontSize="20" Margin="40 10 0 10" Width="50"></Label>
                <Grid Margin="10">
                    <Border Background="{DynamicResource BackgroundBrush}" BorderBrush="{DynamicResource TextBoxBorderBrush}"
                            BorderThickness="1" CornerRadius="5" MouseEnter="IpTextBox_OnMouseEnter" MouseLeave="IpTextBox_OnMouseLeave">
                        <TextBox Foreground="{DynamicResource TextBoxHintTextBrush}" Background="Transparent"
                                 BorderThickness="0" CaretBrush="{DynamicResource TextBoxCaretBrush}"
                                 Text="IPv4/6" VerticalContentAlignment="Center" FontSize="18" Name="IpTextBox"
                                 GotFocus="IpTextBox_OnGotFocus" LostFocus="IpTextBox_OnLostFocus"
                                 VerticalAlignment="Center" TextChanged="IpTextBox_OnTextChanged"></TextBox>
                    </Border>
                    <Border Background="Transparent" BorderBrush="{DynamicResource TextBoxBorderBrushFocused}"
                            BorderThickness="1" CornerRadius="5" Name="IpBorder1" IsHitTestVisible="False" Opacity="0"></Border>
                    <Border Background="Transparent" BorderBrush="{DynamicResource TextBoxBorderBrushFocused}"
                            BorderThickness="1" CornerRadius="5" Name="IpBorder2" IsHitTestVisible="False" Opacity="0"></Border>
                </Grid>
            </DockPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
               <Label FontFamily="{StaticResource NetworkListenIcon}" Content="&#xe6a0;" FontSize="15" Name="IpHintRightLabel"
                      Foreground="{DynamicResource ConnectStateBrush1}" VerticalContentAlignment="Center" Visibility="Collapsed"></Label>
               <Label FontFamily="{StaticResource NetworkListenIcon}" Content="&#xe663;" FontSize="15" Name="IpHintErrorLabel"
                      Foreground="{DynamicResource ConnectStateBrush2}" VerticalContentAlignment="Center" Visibility="Collapsed"></Label>
               <Label Content="请输入合法IP！" VerticalContentAlignment="Center" Foreground="{DynamicResource ConnectStateBrush2}"
                      Name="IpHintErrorText" Visibility="Hidden"></Label>
           </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.8*"></ColumnDefinition>
                <ColumnDefinition Width="0.2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="0">
                <Label Content="端口" Foreground="{DynamicResource SecondTextBrush}" HorizontalContentAlignment="Center"
                       FontSize="20" Margin="40 10 0 10" Width="50"></Label>
                <Grid Margin="10">
                    <Border Background="{DynamicResource BackgroundBrush}" BorderBrush="{DynamicResource TextBoxBorderBrush}"
                            BorderThickness="1" CornerRadius="5" MouseEnter="PortTextBox_OnMouseEnter" MouseLeave="PortTextBox_OnMouseLeave">
                        <TextBox Foreground="{DynamicResource TextBoxHintTextBrush}" Background="Transparent"
                                 BorderThickness="0" CaretBrush="{DynamicResource TextBoxCaretBrush}"
                                 Text="1~65535" VerticalContentAlignment="Center" FontSize="18" Name="PortTextBox"
                                 GotFocus="PortTextBox_OnGotFocus" LostFocus="PortTextBox_OnLostFocus"
                                 VerticalAlignment="Center" TextChanged="PortTextBox_OnTextChanged"></TextBox>
                    </Border>
                    <Border Background="Transparent" BorderBrush="{DynamicResource TextBoxBorderBrushFocused}"
                            BorderThickness="1" CornerRadius="5" Name="PortBorder1" IsHitTestVisible="False" Opacity="0"></Border>
                    <Border Background="Transparent" BorderBrush="{DynamicResource TextBoxBorderBrushFocused}"
                            BorderThickness="1" CornerRadius="5" Name="PortBorder2" IsHitTestVisible="False" Opacity="0"></Border>
                </Grid>
            </DockPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
               <Label FontFamily="{StaticResource NetworkListenIcon}" Content="&#xe6a0;" FontSize="15" Name="PortHintRightLabel"
                      Foreground="{DynamicResource ConnectStateBrush1}" VerticalContentAlignment="Center" Visibility="Collapsed"></Label>
               <Label FontFamily="{StaticResource NetworkListenIcon}" Content="&#xe663;" FontSize="15" Name="PortHintErrorLabel"
                      Foreground="{DynamicResource ConnectStateBrush2}" VerticalContentAlignment="Center" Visibility="Collapsed"></Label>
               <Label VerticalContentAlignment="Center" Foreground="{DynamicResource ConnectStateBrush2}"
                      Name="PortHintErrorText" Visibility="Hidden"></Label>
           </StackPanel>
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
            <Label Content="状态：" Foreground="{DynamicResource SecondTextBrush}"
                   FontSize="20" Margin="39 10 0 10" Width="60"></Label>
            <Label Content="未开启" FontSize="18" VerticalContentAlignment="Center" Foreground="{DynamicResource ConnectStateBrush2}"
                   Name="ConnectStateLabel"></Label>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Left">
            <Label Content="目标：" Foreground="{DynamicResource SecondTextBrush}"
                   FontSize="20" Margin="39 10 0 10" Width="60"></Label>
            <Label FontSize="18" VerticalContentAlignment="Center" Foreground="{DynamicResource SecondTextBrush}"
                   Margin="0 0 40 0" Name="ConnectTargetLabel"></Label>
        </StackPanel>
        <StackPanel Grid.Row="5" Orientation="Horizontal">
            <Button Style="{StaticResource ListenButton}" Margin="30 30 10 30" Click="Start" Name="StartButton"></Button>
            <Button Style="{StaticResource CloseButton}" Margin="0" IsEnabled="False" Click="Over" Name="OverButton"></Button>
        </StackPanel>
    </Grid>
</Page>
