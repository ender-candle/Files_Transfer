<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="SideBarButton" TargetType="Button">
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"></Setter>
        <Setter Property="Background" Value="{DynamicResource SideBarButtonBackgroundBrushActive}"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Fill="{TemplateBinding Background}" Name="Ellipse" Opacity="0"></Ellipse>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="Ellipse"
                                                     Storyboard.TargetProperty="Opacity"
                                                     From="0" To="0.6" Duration="0:0:0.2"></DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="Ellipse"
                                                     Storyboard.TargetProperty="Opacity"
                                                     From="0.6" To="0" Duration="0:0:0.2"></DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="SendButton" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{DynamicResource CcButtonBackgroundBrush}"
                            BorderBrush="{DynamicResource ConfirmButtonForegroundBrush}"
                            BorderThickness="3"
                            Width="120" Height="40" CornerRadius="20">
                        <Grid>
                            <Border Background="{DynamicResource ConfirmButtonUnableBackgroundBrush}"
                                    BorderThickness="0"
                                    Width="114" Height="34" CornerRadius="17" Opacity="0" Name="UnableBorder"></Border>
                            <Grid Margin="3.5 0 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.34*"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="1" Content="发送" FontSize="15" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"
                                       Foreground="{DynamicResource TextBrush}" Margin="0"
                                       Name="Text"></Label>
                                <Border Grid.Column="0" Grid.ColumnSpan="2" Background="{DynamicResource ConfirmButtonForegroundBrush}"
                                        Width="28" Height="28" CornerRadius="14" HorizontalAlignment="Left" Name="SlideBorder">
                                    <Grid>
                                        <Border Background="{DynamicResource ConfirmButtonForegroundBrush}"
                                                Width="28" Height="28" CornerRadius="14" HorizontalAlignment="Left" Name="SlideBorderLeft"></Border>
                                        <Border Background="{DynamicResource ConfirmButtonForegroundBrush}"
                                                Width="28" Height="28" CornerRadius="14" HorizontalAlignment="Right" Name="SlideBorderRight"></Border>
                                        <Label FontFamily="{StaticResource SendIcon}" Content="&#xe614;" FontSize="16"
                                               Foreground="{DynamicResource CcButtonIconBrush}"
                                               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Label>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="SlideBorder"
                                                     Storyboard.TargetProperty="Width"
                                                     To="107" Duration="0:0:0.4">
                                        <DoubleAnimation.EasingFunction>
                                            <CircleEase EasingMode="EaseInOut"></CircleEase>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="SlideBorder"
                                                     Storyboard.TargetProperty="Width"
                                                     To="28" Duration="0:0:0.4">
                                        <DoubleAnimation.EasingFunction>
                                            <CircleEase EasingMode="EaseInOut"></CircleEase>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="SlideBorder" Property="Background" Value="{DynamicResource CcButtonBackgroundBrush}"></Setter>
                            <Setter TargetName="SlideBorderLeft" Property="Background" Value="{DynamicResource CcButtonBackgroundBrush}"></Setter>
                            <Setter TargetName="SlideBorderRight" Property="Background" Value="{DynamicResource CcButtonBackgroundBrush}"></Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="False">
                            <Setter TargetName="SlideBorder" Property="Background" Value="{DynamicResource ConfirmButtonForegroundBrush}"></Setter>
                            <Setter TargetName="SlideBorderLeft" Property="Background" Value="{DynamicResource ConfirmButtonForegroundBrush}"></Setter>
                            <Setter TargetName="SlideBorderRight" Property="Background" Value="{DynamicResource ConfirmButtonForegroundBrush}"></Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="SlideBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" Duration="0:0:0.3"></DoubleAnimation>
                                        <ThicknessAnimation Storyboard.TargetName="Text"
                                                            Storyboard.TargetProperty="Margin"
                                                            To="-33 0 0 0" Duration="0:0:0.3"></ThicknessAnimation>
                                        <DoubleAnimation Storyboard.TargetName="UnableBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" Duration="0:0:0.3"></DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="SlideBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" Duration="0:0:0.3"></DoubleAnimation>
                                        <ThicknessAnimation Storyboard.TargetName="Text"
                                                            Storyboard.TargetProperty="Margin"
                                                            To="0 0 0 0" Duration="0:0:0.3"></ThicknessAnimation>
                                        <DoubleAnimation Storyboard.TargetName="UnableBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" Duration="0:0:0.3"></DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
