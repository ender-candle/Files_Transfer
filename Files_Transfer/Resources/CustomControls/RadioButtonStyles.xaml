<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="NetworkRadioButtonLeft" TargetType="RadioButton">
        <Setter Property="BorderThickness" Value="0"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border Background="{DynamicResource NetworkRadioButtonBackgroundBrush}"
                            BorderBrush="{DynamicResource NetworkRadioButtonBorderBrush}"
                            BorderThickness="3"
                            Width="100" Height="40" CornerRadius="20 0 0 20">
                        <Grid>
                            <Border Background="{DynamicResource NetworkRadioButtonBackgroundBrush}"
                                    BorderThickness="0"
                                    Width="88" Height="28" CornerRadius="14 0 0 14">
                                <Grid>
                                    <TextBlock Text="服务端" FontSize="15" VerticalAlignment="Center" Foreground="{DynamicResource TextBrush}"
                                               Name="Text" Margin="25 0 0 0"></TextBlock>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" ClipToBounds="True">
                                        <Border Background="{DynamicResource NetworkRadioButtonBorderBrush}"
                                                Width="28" Height="28" CornerRadius="14 0 0 14"
                                                Name="SlideBorder" Margin="0 0 -28 0">
                                            <Grid>
                                                <TextBlock FontFamily="{StaticResource NetworkRadioButtonIcon}"
                                                           Text="&#xe650;" FontSize="15" Foreground="{DynamicResource NetworkRadioButtonForegroundBrush}"
                                                           VerticalAlignment="Center" Margin="8 0 0 0" Name="Icon"></TextBlock>
                                                <Label FontFamily="{StaticResource NetworkRadioButtonIcon}" HorizontalContentAlignment="Center"
                                                       Content="&#xe614;" FontSize="15" Foreground="{DynamicResource NetworkRadioButtonStateBrush1}"
                                                       VerticalAlignment="Center" Margin="90 0 0 0" Name="Icon1" Width="25" Height="25" Background="{DynamicResource NetworkRadioButtonStateBackgroundBrush1}"></Label>
                                                <Border Width="25" Height="25" Margin="90 0 0 0" Background="{DynamicResource NetworkRadioButtonStateBackgroundBrush2}" Name="Icon2">
                                                    <TextBlock FontFamily="{StaticResource NetworkRadioButtonIcon}"
                                                               Text="&#xe615;" FontSize="20" Foreground="{DynamicResource NetworkRadioButtonStateBrush2}"
                                                               VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            <Border Background="Transparent" BorderBrush="{DynamicResource NetworkRadioButtonBackgroundBrush}"
                                    BorderThickness="3"
                                    Width="94" Height="34" CornerRadius="17 0 0 17"></Border>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation Storyboard.TargetName="Text"
                                                        Storyboard.TargetProperty="Margin"
                                                        To="10 0 0 0" Duration="0:0:0.2">
                                        <ThicknessAnimation.EasingFunction>
                                            <CircleEase EasingMode="EaseInOut"></CircleEase>
                                        </ThicknessAnimation.EasingFunction>
                                    </ThicknessAnimation>
                                    <ThicknessAnimation Storyboard.TargetName="SlideBorder"
                                                        Storyboard.TargetProperty="Margin"
                                                        To="0 0 0 0" Duration="0:0:0.2">
                                        <ThicknessAnimation.EasingFunction>
                                            <CircleEase EasingMode="EaseInOut"></CircleEase>
                                        </ThicknessAnimation.EasingFunction>
                                    </ThicknessAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation Storyboard.TargetName="Text"
                                                        Storyboard.TargetProperty="Margin"
                                                        To="25 0 0 0" Duration="0:0:0.2">
                                        <ThicknessAnimation.EasingFunction>
                                            <CircleEase EasingMode="EaseInOut"></CircleEase>
                                        </ThicknessAnimation.EasingFunction>
                                    </ThicknessAnimation>
                                    <ThicknessAnimation Storyboard.TargetName="SlideBorder"
                                                        Storyboard.TargetProperty="Margin"
                                                        To="0 0 -28 0" Duration="0:0:0.2">
                                        <ThicknessAnimation.EasingFunction>
                                            <CircleEase EasingMode="EaseInOut"></CircleEase>
                                        </ThicknessAnimation.EasingFunction>
                                    </ThicknessAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Checked">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation Storyboard.TargetName="Icon"
                                                        Storyboard.TargetProperty="Margin"
                                                        To="40 0 0 0" Duration="0:0:0.2">
                                        <ThicknessAnimation.EasingFunction>
                                            <CircleEase EasingMode="EaseInOut"></CircleEase>
                                        </ThicknessAnimation.EasingFunction>
                                    </ThicknessAnimation>
                                    <DoubleAnimation Storyboard.TargetName="SlideBorder"
                                                     Storyboard.TargetProperty="Width"
                                                     To="116" Duration="0:0:0.2">
                                        <DoubleAnimation.EasingFunction>
                                            <CircleEase EasingMode="EaseInOut"></CircleEase>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Unchecked">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation Storyboard.TargetName="Icon"
                                                        Storyboard.TargetProperty="Margin"
                                                        To="8 0 0 0" Duration="0:0:0.2">
                                        <ThicknessAnimation.EasingFunction>
                                            <CircleEase EasingMode="EaseInOut"></CircleEase>
                                        </ThicknessAnimation.EasingFunction>
                                    </ThicknessAnimation>
                                    <DoubleAnimation Storyboard.TargetName="SlideBorder"
                                                     Storyboard.TargetProperty="Width"
                                                     To="28" Duration="0:0:0.2">
                                        <DoubleAnimation.EasingFunction>
                                            <CircleEase EasingMode="EaseInOut"></CircleEase>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <Trigger Property="BorderThickness" Value="0">
                            <Setter TargetName="Icon1" Property="Visibility" Value="Visible"></Setter>
                            <Setter TargetName="Icon2" Property="Visibility" Value="Hidden"></Setter>
                        </Trigger>
                        <Trigger Property="BorderThickness" Value="1">
                            <Setter TargetName="Icon1" Property="Visibility" Value="Hidden"></Setter>
                            <Setter TargetName="Icon2" Property="Visibility" Value="Visible"></Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="NetworkRadioButtonRight" TargetType="RadioButton">
        <Setter Property="BorderThickness" Value="0"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border Background="{DynamicResource NetworkRadioButtonBackgroundBrush}"
                            BorderBrush="{DynamicResource NetworkRadioButtonBorderBrush}"
                            BorderThickness="3"
                            Width="100" Height="40" CornerRadius="0 20 20 0">
                        <Grid>
                            <Border Background="{DynamicResource NetworkRadioButtonBackgroundBrush}"
                                    BorderThickness="0"
                                    Width="88" Height="28" CornerRadius="0 14 14 0">
                                <Grid>
                                    <TextBlock Text="客户端" FontSize="15" VerticalAlignment="Center" Foreground="{DynamicResource TextBrush}"
                                               Name="Text" Margin="18 0 0 0"></TextBlock>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" ClipToBounds="True">
                                        <Border Background="{DynamicResource NetworkRadioButtonBorderBrush}"
                                                Width="28" Height="28" CornerRadius="0 14 14 0"
                                                Name="SlideBorder" Margin="-28 0 0 0">
                                            <Grid>
                                                <TextBlock FontFamily="{StaticResource NetworkRadioButtonIcon}"
                                                           Text="&#xe652;" FontSize="15" Foreground="{DynamicResource NetworkRadioButtonForegroundBrush}"
                                                           VerticalAlignment="Center" Margin="4 0 0 0" Name="Icon"></TextBlock>
                                                <Label FontFamily="{StaticResource NetworkRadioButtonIcon}" HorizontalContentAlignment="Center"
                                                       Content="&#xe614;" FontSize="15" Foreground="{DynamicResource NetworkRadioButtonStateBrush1}"
                                                       VerticalAlignment="Center" Margin="0 0 90 0" Name="Icon1" Width="25" Height="25" Background="{DynamicResource NetworkRadioButtonStateBackgroundBrush1}"></Label>
                                                <Border Width="25" Height="25" Margin="0 0 90 0" Background="{DynamicResource NetworkRadioButtonStateBackgroundBrush2}" Name="Icon2">
                                                    <TextBlock FontFamily="{StaticResource NetworkRadioButtonIcon}"
                                                               Text="&#xe615;" FontSize="20" Foreground="{DynamicResource NetworkRadioButtonStateBrush2}"
                                                               VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            <Border Background="Transparent" BorderBrush="{DynamicResource NetworkRadioButtonBackgroundBrush}"
                                    BorderThickness="3"
                                    Width="94" Height="34" CornerRadius="0 17 17 0"></Border>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation Storyboard.TargetName="Text"
                                                        Storyboard.TargetProperty="Margin"
                                                        To="33 0 0 0" Duration="0:0:0.2">
                                        <ThicknessAnimation.EasingFunction>
                                            <CircleEase EasingMode="EaseInOut"></CircleEase>
                                        </ThicknessAnimation.EasingFunction>
                                    </ThicknessAnimation>
                                    <ThicknessAnimation Storyboard.TargetName="SlideBorder"
                                                        Storyboard.TargetProperty="Margin"
                                                        To="0 0 0 0" Duration="0:0:0.2">
                                        <ThicknessAnimation.EasingFunction>
                                            <CircleEase EasingMode="EaseInOut"></CircleEase>
                                        </ThicknessAnimation.EasingFunction>
                                    </ThicknessAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation Storyboard.TargetName="Text"
                                                        Storyboard.TargetProperty="Margin"
                                                        To="18 0 0 0" Duration="0:0:0.2">
                                        <ThicknessAnimation.EasingFunction>
                                            <CircleEase EasingMode="EaseInOut"></CircleEase>
                                        </ThicknessAnimation.EasingFunction>
                                    </ThicknessAnimation>
                                    <ThicknessAnimation Storyboard.TargetName="SlideBorder"
                                                        Storyboard.TargetProperty="Margin"
                                                        To="-28 0 0 0" Duration="0:0:0.2">
                                        <ThicknessAnimation.EasingFunction>
                                            <CircleEase EasingMode="EaseInOut"></CircleEase>
                                        </ThicknessAnimation.EasingFunction>
                                    </ThicknessAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Checked">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation Storyboard.TargetName="Icon"
                                                        Storyboard.TargetProperty="Margin"
                                                        To="60 0 0 0" Duration="0:0:0.2">
                                        <ThicknessAnimation.EasingFunction>
                                            <CircleEase EasingMode="EaseInOut"></CircleEase>
                                        </ThicknessAnimation.EasingFunction>
                                    </ThicknessAnimation>
                                    <DoubleAnimation Storyboard.TargetName="SlideBorder"
                                                     Storyboard.TargetProperty="Width"
                                                     To="116" Duration="0:0:0.2">
                                        <DoubleAnimation.EasingFunction>
                                            <CircleEase EasingMode="EaseInOut"></CircleEase>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Unchecked">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation Storyboard.TargetName="Icon"
                                                        Storyboard.TargetProperty="Margin"
                                                        To="4 0 0 0" Duration="0:0:0.2">
                                        <ThicknessAnimation.EasingFunction>
                                            <CircleEase EasingMode="EaseInOut"></CircleEase>
                                        </ThicknessAnimation.EasingFunction>
                                    </ThicknessAnimation>
                                    <DoubleAnimation Storyboard.TargetName="SlideBorder"
                                                     Storyboard.TargetProperty="Width"
                                                     To="28" Duration="0:0:0.2">
                                        <DoubleAnimation.EasingFunction>
                                            <CircleEase EasingMode="EaseInOut"></CircleEase>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <Trigger Property="BorderThickness" Value="0">
                            <Setter TargetName="Icon1" Property="Visibility" Value="Visible"></Setter>
                            <Setter TargetName="Icon2" Property="Visibility" Value="Hidden"></Setter>
                        </Trigger>
                        <Trigger Property="BorderThickness" Value="1">
                            <Setter TargetName="Icon1" Property="Visibility" Value="Hidden"></Setter>
                            <Setter TargetName="Icon2" Property="Visibility" Value="Visible"></Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="LightThemeRadioButton" TargetType="RadioButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <StackPanel Orientation="Vertical">
                        <Border BorderThickness="1" CornerRadius="5" Width="68" Height="44" BorderBrush="{DynamicResource ThemeRadioButtonBorderBrush}" Name="Border">
                            <Image Source="../../Assets/PNG/LightTheme.png"></Image>
                        </Border>
                        <Label Content="浅色" FontSize="13" HorizontalAlignment="Center" Foreground="{DynamicResource SecondTextBrush}" Name="Label" Margin="0 10 0 0"></Label>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource ThemeRadioButtonBorderBrushChosen}"></Setter>
                            <Setter TargetName="Label" Property="Foreground" Value="{DynamicResource ThemeRadioButtonBorderBrushChosen}"></Setter>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource ThemeRadioButtonBorderBrush}"></Setter>
                            <Setter TargetName="Label" Property="Foreground" Value="{DynamicResource SecondTextBrush}"></Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="DarkThemeRadioButton" TargetType="RadioButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <StackPanel Orientation="Vertical">
                        <Border BorderThickness="1" CornerRadius="5" Width="68" Height="44" BorderBrush="{DynamicResource ThemeRadioButtonBorderBrush}" Name="Border">
                            <Image Source="../../Assets/PNG/DarkTheme.png"></Image>
                        </Border>
                        <Label Content="深色" FontSize="13" HorizontalAlignment="Center" Foreground="{DynamicResource SecondTextBrush}" Name="Label" Margin="0 10 0 0"></Label>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource ThemeRadioButtonBorderBrushChosen}"></Setter>
                            <Setter TargetName="Label" Property="Foreground" Value="{DynamicResource ThemeRadioButtonBorderBrushChosen}"></Setter>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource ThemeRadioButtonBorderBrush}"></Setter>
                            <Setter TargetName="Label" Property="Foreground" Value="{DynamicResource SecondTextBrush}"></Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>