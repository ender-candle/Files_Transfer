<UserControl x:Class="Files_Transfer.UserControls.SpeedIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Files_Transfer.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="160">
    
    <Border Height="40" CornerRadius="20" BorderBrush="{DynamicResource SpeedIndicatorBorderBrush}"
            BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Width="40" Height="40" CornerRadius="20" Margin="-1 0 0 0"
                    HorizontalAlignment="Left" VerticalAlignment="Center">
                <Label FontFamily="{StaticResource SpeedIcon}" Content="&#xe6cb;" FontSize="25"
                       VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Name="Icon"
                       Foreground="{DynamicResource SpeedIndicatorIconBrush}"></Label>
            </Border>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.22*"></ColumnDefinition>
                    <ColumnDefinition Width="0.78*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Total" FontSize="9" FontWeight="Black" Foreground="{DynamicResource SpeedIndicatorActiveBrush}"
                       Margin="-8 0 0 0"></Label>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="↑ 0.0 B/s" FontSize="13" TextAlignment="Right" Foreground="{DynamicResource SpeedIndicatorActiveBrush}"
                               Width="80" Margin="0 2 0 0" HorizontalAlignment="Left" Name="UsText"></TextBlock>
                    <TextBlock Grid.Row="1" Text="↓ 0.0 B/s" FontSize="13" TextAlignment="Right" Foreground="{DynamicResource SpeedIndicatorActiveBrush}"
                               Width="80" Margin="0 0 0 2" HorizontalAlignment="Left" Name="DsText"></TextBlock>
                </Grid>
            </Grid>
        </Grid>
    </Border>
    
</UserControl>
