<UserControl x:Class="Files_Transfer.UserControls.TaskBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Files_Transfer.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="120" d:DesignWidth="600">
    <Grid>
        <Border BorderBrush="{DynamicResource OutBorderBrush}" BorderThickness="1" CornerRadius="5" Background="Transparent"
                Name="MainBorder" Visibility="Collapsed" MouseEnter="OutActiveBorder_OnMouseEnter" MouseLeave="OutActiveBorder_OnMouseLeave">
            <Grid Margin="20 0">
                <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
                           Foreground="{DynamicResource SecondTextBrush}" FontSize="13"
                           Content="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:TaskBar}, Path=FileName}"></Label>
                    <Border Grid.Column="1" Width="130" Height="30" CornerRadius="15" BorderThickness="1"
                            Margin="10 0" Visibility="Hidden" Name="RemindBorder">
                        <Label FontSize="13" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Name="RemindLabel"></Label>
                    </Border>
                    <Border Grid.Column="2" Width="130" Height="30" CornerRadius="15" BorderThickness="1" BorderBrush="{DynamicResource InBorderBrush}"
                            MouseEnter="InActiveBorder_OnMouseEnter" MouseLeave="InActiveBorder_OnMouseLeave" Background="Transparent">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button FontFamily="{StaticResource TaskIcon}" Content="&#xea6d;" FontSize="16"
                                    Width="35" Style="{StaticResource TaskBarButton}" Name="PauseButton" Visibility="Collapsed"></Button>
                            <Button FontFamily="{StaticResource TaskIcon}" Content="&#xe654;" FontSize="17.5"
                                    Width="35" Style="{StaticResource TaskBarButton}" Name="ResumeButton"></Button>
                            <Button FontFamily="{StaticResource TaskIcon}" Content="&#xe62a;" FontSize="18"
                                    Width="35" Style="{StaticResource TaskBarButton}" Name="RemoveButton"></Button>
                            <Button FontFamily="{StaticResource TaskIcon}" Content="&#xe649;" FontSize="16"
                                    Width="35" Style="{StaticResource TaskBarButton}" Click="InfoButton_OnClick"></Button>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="2" Width="130" Height="30" CornerRadius="15" BorderThickness="1" BorderBrush="{DynamicResource InBorderActiveBrush}"
                            Name="InActiveBorder" Opacity="0" Background="Transparent" IsHitTestVisible="False"></Border>
                </Grid>
                <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Top">
                    <ProgressBar Style="{StaticResource TaskProgressBar}" Margin="0 10"
                                 Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:TaskBar}, Path=ProgressValue}"></ProgressBar>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBlock Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:TaskBar}, Path=InstantSize}"
                                       FontSize="13" Height="20" Margin="0 0 10 0"
                                       Foreground="{DynamicResource ThirdTextBrush}"></TextBlock>
                            <TextBlock Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:TaskBar}, Path=Percent}"
                                       FontSize="13" Height="20" Margin="0 0 10 0"
                                       Foreground="{DynamicResource ThirdTextBrush}"></TextBlock>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:TaskBar}, Path=UpSpeed}"
                                       FontSize="13" Height="20" Margin="10 0 0 0"
                                       Foreground="{DynamicResource ThirdTextBrush}"></TextBlock>
                            <TextBlock Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:TaskBar}, Path=DownSpeed}"
                                       FontSize="13" Height="20" Margin="10 0 0 0"
                                       Foreground="{DynamicResource ThirdTextBrush}"></TextBlock>
                            <TextBlock Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:TaskBar}, Path=RestTime}"
                                       FontSize="13" Height="20" Margin="10 0 0 0"
                                       Foreground="{DynamicResource ThirdTextBrush}"></TextBlock>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
        <Border BorderBrush="{DynamicResource OutBorderBrush}" BorderThickness="1" CornerRadius="5" Background="Transparent"
                Name="StartBorder" Visibility="Collapsed" MouseEnter="OutActiveBorder_OnMouseEnter" MouseLeave="OutActiveBorder_OnMouseLeave">
            <Grid Margin="20 0">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
                           Foreground="{DynamicResource SecondTextBrush}" FontSize="13"
                           Content="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:TaskBar}, Path=FileName}"></Label>
                    <Label Grid.Column="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Name="SizeLabel"
                           Foreground="{DynamicResource SecondTextBrush}" FontSize="13"></Label>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Content="保存路径："
                           Foreground="{DynamicResource SecondTextBrush}" FontSize="13"></Label>
                    <Grid Grid.Column="1" Margin="0 5 5 5">
                        <Border Background="{DynamicResource BackgroundBrush}" BorderBrush="{DynamicResource TextBoxBorderBrush}"
                                BorderThickness="1" CornerRadius="5" MouseEnter="PathTextBox_OnMouseEnter" MouseLeave="PathTextBox_OnMouseLeave">
                            <TextBox Foreground="{DynamicResource SecondTextBrush}" Background="Transparent"
                                     BorderThickness="0" CaretBrush="{DynamicResource TextBoxCaretBrush}"
                                     Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:TaskBar}, Path=Path}"
                                     VerticalContentAlignment="Center" FontSize="13" Name="PathTextBox"
                                     GotFocus="PathTextBox_OnGotFocus" LostFocus="PathTextBox_OnLostFocus"
                                     VerticalAlignment="Center"></TextBox>
                        </Border>
                        <Border Background="Transparent" BorderBrush="{DynamicResource TextBoxBorderBrushFocused}"
                                BorderThickness="1" CornerRadius="5" Name="PathBorder1" IsHitTestVisible="False" Opacity="0"></Border>
                        <Border Background="Transparent" BorderBrush="{DynamicResource TextBoxBorderBrushFocused}"
                                BorderThickness="1" CornerRadius="5" Name="PathBorder2" IsHitTestVisible="False" Opacity="0"></Border>
                    </Grid>
                    <Button Grid.Column="2" Style="{StaticResource SimpleButton}" Width="80" Height="30" Content="路径选择" FontSize="13" Opacity="0.8"
                            Foreground="{DynamicResource FileChooseButtonBrush}" BorderBrush="{DynamicResource FileChooseButtonBrush}"
                            Click="PathChoose"></Button>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Style="{StaticResource SimpleButton}" Width="80" Height="30" Content="接受" FontSize="13"
                            Foreground="{DynamicResource AcceptButtonBrush}" BorderBrush="{DynamicResource AcceptButtonBrush}"
                            HorizontalAlignment="Center" Name="AcceptButton"></Button>
                    <Button Grid.Column="1" Style="{StaticResource SimpleButton}" Width="80" Height="30" Content="拒绝" FontSize="13"
                            Foreground="{DynamicResource RejectButtonBrush}" BorderBrush="{DynamicResource RejectButtonBrush}"
                            HorizontalAlignment="Center" Name="RejectButton"></Button>
                </Grid>
            </Grid>
        </Border>
        <Border BorderBrush="{DynamicResource OutBorderBrush}" BorderThickness="1" CornerRadius="5" Background="Transparent"
                Name="InfoBorder" Visibility="Collapsed" MouseEnter="OutActiveBorder_OnMouseEnter" MouseLeave="OutActiveBorder_OnMouseLeave">
            <Grid Margin="20 0">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
                           Foreground="{DynamicResource SecondTextBrush}" FontSize="13"
                           Content="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:TaskBar}, Path=FileName}"></Label>
                    <Button Grid.Column="1" FontFamily="{StaticResource TaskIcon}" Content="&#xe62a;" FontSize="18"
                            Style="{StaticResource TaskBarButton}" Click="InfoCloseButton_OnClick"></Button>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Content="文件路径："
                           Foreground="{DynamicResource SecondTextBrush}" FontSize="13"></Label>
                    <Label Grid.Column="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
                           Foreground="{DynamicResource SecondTextBrush}" FontSize="13" Name="PathLabel"></Label>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Content="文件大小："
                           Foreground="{DynamicResource SecondTextBrush}" FontSize="13"></Label>
                    <Label Grid.Column="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
                           Foreground="{DynamicResource SecondTextBrush}" FontSize="13" Name="DetailSizeLabel"></Label>
                </Grid>
            </Grid>
        </Border>
        <Border BorderBrush="{DynamicResource OutBorderActiveBrush}" BorderThickness="1" CornerRadius="5" Opacity="0" Background="Transparent"
                Name="OutActiveBorder" IsHitTestVisible="False"></Border>
    </Grid>
</UserControl>
